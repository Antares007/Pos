<Window x:Class="POS.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Title="CustomerWindow" Height="600" Width="800">
    <Grid >
        <Rectangle Fill="{DynamicResource background}"/>
            <Rectangle HorizontalAlignment="Left" Height="600" Width="600">
                <Rectangle.Fill>
                    <VisualBrush Stretch="Fill" Visual="{Binding}" />
                </Rectangle.Fill>
            </Rectangle>
        <Rectangle Width="186" HorizontalAlignment="Right" Fill="#CCFFFFFF"/>
    </Grid>
</Window>
