<UserControl x:Class="POS.Views.Sale.IncreaseDecreaseTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             BorderBrush="{DynamicResource TeritaryColor}" 
             BorderThickness="2">
    <Grid Canvas.Left="0" Canvas.Top="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Button Command="{Binding DecreaseQuantity}" 
                VerticalAlignment="Center"
                Content="-" 
                Background="{DynamicResource BaseColor}"
                Foreground="White" 
                BorderThickness="0"
                BorderBrush="{x:Null}" 
                FontSize="40">
        </Button>
        <Button Command="{Binding IncreaseQuantity}"
                VerticalAlignment="Center"
                Content="+" Grid.Column="2" 
                Background="{DynamicResource BaseColor}" 
                BorderBrush="{x:Null}" 
                BorderThickness="0"
                Foreground="White" 
                FontSize="40">
        </Button>
    </Grid>
</UserControl>
